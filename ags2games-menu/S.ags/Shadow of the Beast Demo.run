; HstWB Menu Item Run script for AGS2
; -----------------------------------
;RunFile=A-Games:S/ShadowOfTheBeastDemo/ShadowOfTheBeastDemo.Slave

; Favourites Mode
IF EXISTS ENV:ags2favouritesmode
  execute S:AGS2Favourites "S" "Shadow of the Beast Demo"
  IF $ags2favouritesmode EQ "add"
    SKIP end
  ENDIF
  IF $ags2favouritesmode EQ "remove"
    SKIP end
  ENDIF
ENDIF

; Start AGS2 Run Pre Script, if it exists
IF EXISTS S:AGS2RunPre
  execute S:AGS2RunPre
ENDIF

; Run WHDLoad
cd "A-Games:S/ShadowOfTheBeastDemo/"
IF EXISTS ENV:whdloadargs
  whdload "ShadowOfTheBeastDemo.Slave" $whdloadargs
ELSE
  whdload "ShadowOfTheBeastDemo.Slave"
ENDIF

; Start AGS2 Run Post Script, if it exists
IF EXISTS S:AGS2RunPost
  execute S:AGS2RunPost
ENDIF

; End
LAB end
